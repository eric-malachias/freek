{
  "name": "freek",
  "version": "0.1.2",
  "description": "Freek is a high level controller boiler plate to help organize endpoint handlers.",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "author": "Eric Malachias <malachias.eric@gmail.com>",
  "license": "MIT",
  "keywords": [
    "controller",
    "request",
    "response",
    "endpoint",
    "router",
    "routing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eric-malachias/freek.git"
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/express": "4.17.6",
    "@types/mocha": "7.0.2",
    "@types/node": "13.11.1",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "chai": "4.2.0",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.5",
    "mocha": "7.1.1",
    "nodemon": "2.0.3",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "test": "mocha -r ts-node/register src/**/*.test.ts",
    "test:watch": "nodemon -e ts --exec 'npm run test || exit 1'",
    "lint": "eslint ./src/**/*.ts"
  },
  "dependencies": {
    "express": "4.17.1",
    "reflect-metadata": "0.1.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "bugs": {
    "url": "https://github.com/eric-malachias/freek/issues"
  },
  "homepage": "https://github.com/eric-malachias/freek#readme"
}
