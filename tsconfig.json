{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2017"],
    "sourceMap": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
  },
  "include": ["src", "sandbox/sandbox.ts"],
  "exclude": ["node_modules"],
}
